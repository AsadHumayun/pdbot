{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"types": ["node"],
		"lib": ["DOM"],
		"declaration": false,
		"declarationMap": false,
		"module": "node16",
		"moduleResolution": "node16",
		"target": "es2022",
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"]
}
