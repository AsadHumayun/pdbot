{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"types": ["node"],
		"lib": ["DOM"],
		"declaration": false,
		"declarationMap": false,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"skipLibCheck": true
	}
}
