{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "pdbot",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsc && prettier -c -w . && eslint --ext .ts --format=pretty src && node --env-file=.env dist/index.js",
		"lint": "prettier --check . && eslint --ext .ts --format=pretty src",
		"deploy": "node --env-file=.env dist/util/deploy.js",
		"format": "prettier --write . && eslint --ext .ts --fix --format=pretty src",
		"start": "node --env-file=.env dist/index.js"
	},
	"dependencies": {
		"@discordjs/core": "^2.4.0",
		"discord.js": "^14.25.1",
		"eslint-import-resolver-typescript": "^4.4.4",
		"extra-strict": "link:@sapphire/ts-config/extra-strict",
		"lodash.merge": "^4.6.2",
		"ts-node": "^10.9.2"
	},
	"devDependencies": {
		"@sapphire/ts-config": "^5.0.3",
		"@types/node": "25.1.0",
		"eslint": "^9.39.2",
		"eslint-config-neon": "^0.2.9",
		"eslint-formatter-compact": "^8.40.0",
		"eslint-formatter-pretty": "^7.0.0",
		"prettier": "^3.8.1",
		"typescript": "~5.9.3",
		"zod": "^3.25.76"
	},
	"engines": {
		"node": ">=22.12.0"
	}
}
